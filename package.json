{
  "name": "fancy-file-editor",
  "displayName": "Fancy File Editor",
  "description": "A VS Code extension prototype that provides a custom text editor for a simple text-based filetype.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage=tsb"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run build",
    "test": "npm run build && npx mocha out/test/**/*.test.js",
    "test:watch": "npm run build && npx mocha out/test/**/*.test.js --watch"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.70.0",
    "@types/mocha": "^10.0.0",
    "@types/assert": "^1.5.10",
    "@vscode/test-electron": "^1.6.2",
    "mocha": "^10.0.0",
    "typescript": "^4.0.0"
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "fancy-file-editor.myTextEditor",
        "displayName": "Fancy File Editor",
        "selector": [
          {
            "filenamePattern": "*.tsb"
          }
        ]
      }
    ]
  }
}
